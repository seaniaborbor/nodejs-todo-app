<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Node Todo App</title>
</head>
<body>
    <div class="container py-5">
        <div class="row">
            <div class="col-12">
                <div class="card shadow-lg mt-3">
                   <div class="card-header ">
                    <h1>Basic Node.js Todo App</h1>
                   </div> 
                   <div class="card-body">
                    <div>
                        <div class="alert alert-primary rounded-0 m-0">
                            <form method="post" action="/save" class="form-inline">
                                <input type="text" required  name="description" placeholder="Enter todo" class="rounded-0 border-primary mb-2 form-control form-control-lg col-8">
                                <button class="btn btn-primary mb-2 col-3 ml-1 btn-lg" type="submit">Save todo</button>
                            </form>
                        </div>
                    </div>
                </div>

                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>description</th>
                            <th>Delete</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(todosList =>{ %>
                            <tr>
                                <th><%= todosList.description %></th>
                                <th><a class="btn btn-danger btn-sm" href="delete/<%= todosList.id %>">Delete</a></th>
                                <th><a class="btn btn-warning btn-sm" href="edit/<%= todosList.id %>">Edit</a></th>
                            </tr>
                        <% })%>
                    </tbody>
                </table>
                   </div>
            </div>
        </div>
    </div>
</body>
</html>